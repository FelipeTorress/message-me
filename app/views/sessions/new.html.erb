<h1 class="ui center aligned header">Bem Vindo ao MessageMe - seu chat online preferido</h1>

<h2 class="ui center aligned medium icon header">
  <i class="circular red power icon"></i>
  Fa√ßa Login Para Continuar
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">


      <div class="ui form">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <div class="field">
          <%= f.label :Username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :Password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Senha" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <%= f.submit 'Logar',class: "ui red submit button" %>
        <% end %>
      </div>



    </div>
    <div class="middle aligned column">
      <div class="ui big red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
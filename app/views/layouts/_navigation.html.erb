<div class="ui small inverted menu">

  <div class="ui container">
    <%= link_to 'BatePapo', root_path, class: "item" %>
    <%= link_to 'Mensagens', root_path, class: "item" %>

    <div class="right menu">
      <div class="ui dropdown item">
        Conta <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Sair', logout_path, method: :delete, class: "item"%>
          <% else %>
            <%= link_to 'Fazer Login', login_path, class: "item"%>
          <% end %>
        </div>
      </div>

      <% if !logged_in? %>
        <div class="item">
          <%= link_to 'Fazer Login', login_path, class: "ui red button" %>
        </div>
      <% end %>

    </div>

  </div>
</div>